<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:onClick="save"
        android:text="save"
        app:layout_constraintStart_toEndOf="@+id/text_insert"
        tools:layout_editor_absoluteY="36dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/text_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Insert your text"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <ListView
        android:id="@+id/list_insert"
        android:layout_width="313dp"
        android:layout_height="331dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="LAST MESSAGES"
        android:onClick="printLastMessages"
        app:layout_constraintTop_toBottomOf="@+id/text_insert"
        tools:layout_editor_absoluteX="16dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>